# LoadRunner Admin Dashboard Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
# Your Supabase project URL (found in project settings)
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anonymous key (safe to use in client apps)
SUPABASE_ANONKEY=your-supabase-anon-key

# Supabase service role key (for edge functions - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# APP CONFIGURATION
# ===========================================
# Environment: development, staging, production
APP_ENV=development

# Enable debug logging (true/false)
DEBUG_MODE=true

# API timeout in seconds
API_TIMEOUT=30

# ===========================================
# PAYMENT INTEGRATIONS (Optional - for bank verification)
# ===========================================
# Paystack secret key for bank verification API
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key

# ===========================================
# SMS INTEGRATION (Required for OTP authentication)
# ===========================================
# BulkSMS credentials for sending OTP verification codes
BULKSMS_USERNAME=your-bulksms-username
BULKSMS_PASSWORD=your-bulksms-password

# ===========================================
# STORAGE CONFIGURATION
# ===========================================
# Supabase Storage bucket for admin uploads
STORAGE_BUCKET=admin-uploads

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=10
